{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": [
    "playwright.config.ts",
    "e2e/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "backend",
    "frontend"
  ]
}
