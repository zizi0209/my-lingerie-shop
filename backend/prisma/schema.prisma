generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. NGƯỜI DÙNG (Admin & Khách)
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("customer") // "admin" | "customer"
  orders    Order[]
  createdAt DateTime @default(now())
}

// 2. DANH MỤC (Ví dụ: Áo lót, Quần lót, Đồ ngủ)
model Category {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String    @unique // slug để làm URL đẹp (ao-lot-ren)
  image     String?
  products  Product[]
  createdAt DateTime  @default(now())
}

// 3. SẢN PHẨM
model Product {
  id          Int     @id @default(autoincrement())
  name        String
  slug        String  @unique
  description String? @db.Text
  price       Float // Giá gốc
  salePrice   Float? // Giá khuyến mãi (nếu có)

  // Quan hệ
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])

  images     ProductImage[]
  variants   ProductVariant[] // Size, Màu, Tồn kho nằm ở đây
  orderItems OrderItem[]

  isFeatured Boolean  @default(false) // Sản phẩm nổi bật
  isVisible  Boolean  @default(true) // Ẩn/Hiện
  createdAt  DateTime @default(now())
}

// 4. ẢNH SẢN PHẨM (1 SP có nhiều ảnh)
model ProductImage {
  id        Int     @id @default(autoincrement())
  url       String
  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

// 5. BIẾN THỂ (Màu/Size/Kho)
model ProductVariant {
  id        Int     @id @default(autoincrement())
  size      String // S, M, L, 34B, 36B...
  color     String // Đỏ, Đen, Ren trắng...
  stock     Int     @default(0) // Số lượng tồn kho
  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

// 6. CẤU HÌNH CMS ĐỘNG (Cho Admin chỉnh giao diện)
model PageSection {
  id        Int     @id @default(autoincrement())
  code      String  @unique // HERO, FEATURED...
  name      String
  isVisible Boolean @default(true)
  order     Int     @default(0)
  content   Json? // Chứa Title, Banner URL, Button Text...
}

// 7. ĐƠN HÀNG
model Order {
  id          Int         @id @default(autoincrement())
  userId      Int? // Có thể null nếu mua không cần login
  guestInfo   Json? // Lưu tên, sđt, địa chỉ nếu là khách vãng lai
  totalAmount Float
  status      String      @default("PENDING") // PENDING, SHIPPING, COMPLETED, CANCELLED
  items       OrderItem[]
  createdAt   DateTime    @default(now())
  user        User?       @relation(fields: [userId], references: [id])
}
// 8. 
model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  order     Order   @relation(fields: [orderId], references: [id])
  productId Int
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float // Lưu giá tại thời điểm mua
  variant   String? // Lưu text: "Size M - Màu Đỏ"
}

// 9. MEDIA (Ảnh upload lên Cloudinary)
model Media {
  id           Int      @id @default(autoincrement())
  filename     String
  originalName String
  mimeType     String
  size         Int
  url          String
  publicId     String   @unique
  folder       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// 10. CẤU HÌNH HỆ THỐNG (Logo, Màu sắc, Hotline, SEO...)
model SystemConfig {
  id          Int      @id @default(autoincrement())
  key         String   @unique // Tên cấu hình (vd: 'site_logo', 'hotline')
  value       String   @db.Text // Giá trị (vd: link ảnh, số điện thoại)
  description String? // Mô tả (vd: 'Logo hiển thị trên Header')
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
