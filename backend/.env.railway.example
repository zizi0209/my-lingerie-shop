# Backend Environment Variables for Railway Deployment

# ============================================
# REQUIRED - Database
# ============================================
# Railway PostgreSQL connection string
# Get from Railway Dashboard > Database > Connect > Connection String
DATABASE_URL="postgresql://postgres:password@hostname:5432/railway"

# ============================================
# REQUIRED - Application
# ============================================
PORT=5000
NODE_ENV=production

# ============================================
# REQUIRED - JWT Authentication
# ============================================
JWT_SECRET="your-super-secret-jwt-key-change-this"
JWT_EXPIRES_IN=7d

# ============================================
# OPTIONAL - Admin Seed
# ============================================
ADMIN_EMAIL=admin@mylingerie.com
ADMIN_PASSWORD="AdminSecure123!@#"

# ============================================
# OPTIONAL - Cloudinary (Image Upload)
# ============================================
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# ============================================
# OPTIONAL - CORS
# ============================================
# Frontend URL (Vercel deployment URL)
FRONTEND_URL=https://my-lingerie-shop.vercel.app

# ============================================
# OPTIONAL - Email (Resend)
# ============================================
RESEND_API_KEY=re_your_resend_api_key
CONTACT_EMAIL_FROM=noreply@yourdomain.com
CONTACT_EMAIL_TO=admin@yourdomain.com
SEND_CUSTOMER_EMAIL=true

# ============================================
# OPTIONAL - OAuth2
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ============================================
# OPTIONAL - Data Cleanup
# ============================================
ENABLE_AUTO_CLEANUP=true
